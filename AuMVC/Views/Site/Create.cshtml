@model AuMVC.Data.ViewModels.SiteViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Add Site</h2>


@using (Html.BeginForm("Create", "Site", FormMethod.Post))
{
    <p class="alert alert-info"> All fields are <strong>Required</strong></p>

    <div class="form-group has-success has-feedback">
        @Html.LabelFor(m => m.SiteNumber)
        @Html.TextBoxFor(m => m.SiteNumber, new { @class = "form-control" ,autofocus ="autofocus", placeholder="AA21B"})
        @Html.ValidationMessageFor(m => m.SiteNumber, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HomeOwner)
        @Html.TextBoxFor(m => m.HomeOwner, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.HomeOwner, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContactNumber)
        @Html.TextBoxFor(m => m.ContactNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ContactNumber, "", new { @class = "text-danger", placeholder = "Enter the Contact Number" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContactEmail)
        @Html.TextBoxFor(m => m.ContactEmail, new { @class = "form-control", placeholder = "someone@example.com" })
        @Html.ValidationMessageFor(m => m.ContactEmail, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.HouseType)
        @Html.TextBoxFor(m => m.HouseType, new { @class = "form-control", placeholder = "Enter your House Type here" })
        @Html.ValidationMessageFor(m => m.HouseType, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContractValueExGST)
        @Html.TextBoxFor(m => m.ContractValueExGST, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ContractValueExGST, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContractValueIncGST)
        @Html.TextBoxFor(m => m.ContractValueIncGST, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ContractValueIncGST, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ContractDate)
        @Html.TextBoxFor(m => m.ContractDate, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.ContractDate, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PreContactEOT)
        @Html.TextBoxFor(m => m.PreContactEOT, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PreContactEOT, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.DOPCDate)
        @Html.TextBoxFor(m => m.DOPCDate, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.DOPCDate, "", new { @class = "text-danger" , placeholder="01/01/2018"})
    </div>



    <div class="form-group">
        @Html.LabelFor(m => m.Note)
        @Html.TextBoxFor(m => m.Note, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Note, "", new { @class = "text-danger" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>

}

