@using AuMVC.Data.Models
@model List<Site>

@{
    ViewData["Title"] = "Sites";
}



<button type="button" class="btn btn-default" > @Html.ActionLink("Add New", "CreateSite", "Site") </button>




@if (Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr class="info">
                <td>Site Number</td>
                <td>Home Owner</td>
                <td>Contact Number</td>
                <td>House Type</td>
                <td>Contract Value ExGST</td>
                <td>Contract Value IncGST</td>
                <td>Contract Date</td>
                <td>PreContact EOT</td>
                <td>DOPC Date</td>
                <td>Twelve Month Maintenance</td>
                <td>Note</td>
            </tr>
        </thead>

        <tbody>
            @foreach (Site site in Model)
            {
                <tr>
                    <td>@site.SiteNumber</td>
                    <td>@site.HomeOwner</td>
                    <td>@site.ContactNumber</td>
                    <td>@site.HouseType</td>
                    <td>@site.ContractValueExGST</td>
                    <td>@site.ContractValueIncGST</td>
                    <td>@site.ContractDate</td>
                    <td>@site.PreContactEOT</td>
                    <td>@site.DOPCDate</td>
                    <td>@site.TwelveMonthMaintenance</td>
                    <td>@site.Note</td>
                    <td type="button" class="btn btn-default ">@Html.ActionLink("Edit", "Edit", "Site", new { @id = site.Id })</td>
                    <td type="button" class="btn btn-default ">@Html.ActionLink("Delete", "Delete", "Site", new { @id = site.Id })</td>
                </tr>
            }
        </tbody>
    </table>


}

else
{
    <h1 class="text-center text-danger">There are no Sites yet!</h1>

}
