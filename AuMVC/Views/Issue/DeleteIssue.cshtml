@model AuMVC.Data.Models.Issue
@{
    ViewBag.Title = "Delete Issue";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Issue</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(m => m.Code)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Category)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Date)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Item)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Priority)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(m => m.Note)
        </dt>
        <dd>
            @Html.DisplayFor(m => m.SiteId)
        </dd>

    </dl>

    @using (Html.BeginForm("DeleteConfirmIssue","Issue",FormMethod.Post))
    {
        @Html.HiddenFor(n => n.Id);

        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            |
            @Html.ActionLink("Back to List", "IndexIssue")
        </div>
    }
</div>

