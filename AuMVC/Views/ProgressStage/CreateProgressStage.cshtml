
@model AuMVC.Data.ViewModels.ProgressStageViewModel
@{
    ViewBag.Title = "CreateProgressStage";
}

<h2>CreateProgressStage</h2>


@using (Html.BeginForm("CreateProgressStage", "ProgressStage", FormMethod.Post))
{


    <form>

        <div class="form-group">
            @Html.LabelFor(m => m.Stage)
            @Html.TextBoxFor(m => m.Stage, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Stage, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Value)
            @Html.TextBoxFor(m => m.Value, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateCompleted)
            @Html.TextBoxFor(m => m.DateCompleted, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.CompletedBy)
            @Html.TextBoxFor(m => m.CompletedBy, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.DateApproved)
            @Html.TextBoxFor(m => m.DateApproved, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ApprovedBy)
            @Html.TextBoxFor(m => m.ApprovedBy, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PaymentStatus)
            @Html.TextBoxFor(m => m.PaymentStatus, new { @class = "form-control" })
        </div>


        <div class="form-group">
            @Html.LabelFor(m => m.DatePaid)
            @Html.TextBoxFor(m => m.DatePaid, new { @class = "form-control" })
        </div>


        <button type="button" class="btn btn-primary">Save</button>
    </form>

}
