@using AuMVC.Data.Enums;
@model AuMVC.Data.Models.ProgressStage
@{
    ViewData["Title"] = "Edit Progress Stage";
}

<h2>EditProgressStage</h2>



@using (Html.BeginForm("EditConfirm", "ProgressStage", FormMethod.Post))
{


<form>
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        @Html.LabelFor(m => m.Stage)

        @Html.DropDownListFor(model => model.Stage,
            Html.GetEnumSelectList<ProgressStageStage>(),
            "ProgressStageStage", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Stage, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Value)
        @Html.TextBoxFor(m => m.Value, new { @class = "form-control", placeholder = "Enter the Value" })
        @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateCompleted)
        @Html.TextBoxFor(m => m.DateCompleted, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.DateCompleted, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.CompletedBy)
        @Html.TextBoxFor(m => m.CompletedBy, new { @class = "form-control", placeholder = "Name/Surname" })
        @Html.ValidationMessageFor(m => m.CompletedBy, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.DateApproved)
        @Html.TextBoxFor(m => m.DateApproved, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.DateApproved, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.ApprovedBy)
        @Html.TextBoxFor(m => m.ApprovedBy, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ApprovedBy, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.PaymentStatus)

        @Html.DropDownListFor(model => model.PaymentStatus,
       Html.GetEnumSelectList<ProgressStagePaymentStatus>(),
       "ProgressStagePaymentStatus", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PaymentStatus, "", new { @class = "text-danger" })
    </div>


    <div class="form-group">
        @Html.LabelFor(m => m.DatePaid)
        @Html.TextBoxFor(m => m.DatePaid, new { @class = "form-control", @type = "date" })
        @Html.ValidationMessageFor(m => m.DatePaid, "", new { @class = "text-danger" })
    </div>


    <button type="button" class="btn btn-primary">Save</button>
</form>

}

